<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_03_HelloWorld3.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="30,60,30,30">
            <Label Text = "Note"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="Large"
                   TextColor="PaleVioletRed"/>
            <Editor
                x:Name="editor"
                Placeholder="Inserisci le tue note"
                HeightRequest="10"
                BackgroundColor="Yellow"
                TextColor="Purple"/>
            <Button Text="Salva"
                    Clicked="Salva"/>
            <Button Text="Cancella"
                    Clicked="Cancella"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
