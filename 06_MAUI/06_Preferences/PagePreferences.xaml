<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_06_Preferences.PagePreferences"
             Title="PagePreferences">
    <VerticalStackLayout Padding="30,20,20,20">
        <Label 
            
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            x:Name="lblCognome"
            />
        <Editor 
            x:Name="Cognome"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="Yellow"
           WidthRequest="300"
            MaximumWidthRequest="500"
            />
        <Button Text="Salva"
                Clicked="Salva"/>
        <Button Text="Carica"
                Clicked="Carica"/>
        <Button Text="Reset"
                Clicked="Reset"/>
        <Button Text="SalvaInCache"
                Clicked="SalvaCache"/>
        <Button Text="CaricaCache"
                Clicked="CaricaCache"/>
        <Label x:Name="Path"
               VerticalOptions="Center" 
            HorizontalOptions="Center" />




    </VerticalStackLayout>
</ContentPage>